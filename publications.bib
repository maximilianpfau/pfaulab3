  publisher = "Elsevier BV",
  volume    =  194,
  pages     = "35--45",
  month     =  oct,
  year      =  2018,
  keywords  = "choriocapillaris perfusion; intermediate uveitis; optical
               coherence tomography angiography; retinal perfusion",
  language  = "en"
}

